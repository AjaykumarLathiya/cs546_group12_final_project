<div class="container">
    <div class="row">
        <div class="col-12 box">
            <div class="row row-cols-12 justify-content-md-center">
                <h1>Reviews</h1>
            </div>
            <div class="row row-cols-12">
                <table class="table">
                    {{#if lstReview}}
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Customer Name</th>
                            <th scope="col">Barber Name</th>
                            <th scope="col">Rating</th>
                            <th scope="col">Comment</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each lstReview}}
                        <tr>
                            <td>{{objCustomer.userFirstName}} {{objCustomer.userLastName}}</td>
                            <td>{{objBarber.userFirstName}} {{objBarber.userLastName}}</td>
                            <td>{{rating}}</td>
                            <td>{{comment}}</td>
                        </tr>
                        {{/each}}
                        {{else}}
                        <div style="width: 100%;">
                            <h4 class="pt-3" style="text-align: center;">There are no review found</h4>
                        </div>
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>