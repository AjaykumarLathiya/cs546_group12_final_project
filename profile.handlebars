<div class="container mt-5">
    <div class="card mb-12">
        <div class="row no-gutters"
            style="display: flex; justify-content: center;align-items: center; text-align: center; padding-top: 15px;">
            <div class="col-md-4">
                <img src="{{baseUrl}}/images/img_avatar.png" alt="Avatar" class="avatar">
            </div>
        </div>
        <hr>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">First Name:- <b> {{objUser.userFirstName}} </b> </h5>
                <h5 class="card-title">Last Name:- <b>{{objUser.userLastName}}</b></h5>
                <h5 class="card-title">Contact No.:- <b>{{objUser.contactNo}}</b></h5>
                <h5 class="card-title">Email:- <b>{{objUser.userEmail}}</b></h5>
                <h5 class="card-title">Status:- <b>{{objUser.status}}</b> </h5>
                <h5 class="card-title">Experience:- <b>{{objUser.experience}} year</b></h5>
                <h5 class="card-title">Average Review:- <b>{{toFix objUser.averageReview}}</b></h5>
            </div>
        </div>
        <h1 style="text-align: center; font-weight: bold;">Customer Review</h1>
        {{#each lstReview}}
        <div class="col-md-12">
            <div class="card p-3" style="border-radius: 10px; background:rgba(225, 239, 240, 0.808);">
                <h5>User Name:-<b> {{objCustomer.userFirstName}}</b></h5>
                <h5>Rating:- <b>{{rating}}</b></h5>
                <h5>Comment:- <b>{{comment}}</b></h5>
            </div>
        </div>
        {{/each}}
    </div>
</div>